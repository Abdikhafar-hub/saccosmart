{
  "compilerOptions": {
    "typeRoots": ["Sacco-Frontend/node_modules/@types", "Sacco-Frontend/app/types"],
    "types": [],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "Sacco-Frontend/app/types/**/*.d.ts"
  ],
  "exclude": ["Sacco-Frontend/node_modules"]
}
